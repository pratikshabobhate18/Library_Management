@model Library_Management_Portal.Models.loginModel

@{
    ViewBag.Title = "Login";
    var error = ViewBag.Error as string;
}




@using (Html.BeginForm())
{


    if (!string.IsNullOrEmpty(error))
    {
       <h5 class="m-lg-2"> <div style="color: red; font-weight: bold;">@error</div> </h5>
    }
<div class="form-border">
    <h2>Welcome....Login Here!!!</h2>
    <div>
        @Html.LabelFor(m => m.Username, htmlAttributes: new { @class = "form-label" })
        @Html.TextBoxFor(m => m.Username, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Username)
    </div>

    <div>
        @Html.LabelFor(m => m.Password, htmlAttributes: new { @class = "form-label" })
        @Html.PasswordFor(m => m.Password, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Password)
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Login</button>
    </div>
    <p>
        Don't have an account?
        @Html.ActionLink("Register here", "Register", "User", null, new { @class = "text-decoration-underline" })
    </p>
    <p>
        @Html.ActionLink("Forgot your password?", "ForgotPassword", "User", null, new { @class = "text-primary" })
    </p>
</div>

}