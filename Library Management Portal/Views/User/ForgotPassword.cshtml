@{
    var question = ViewBag.SecurityQuestion as string;
    var message = ViewBag.Message as string;
    var error = ViewBag.Error as string;

}



<form method="post" action="/User/ForgotPassword">
    <div class="form-border">
        <h2>Forgot Password</h2>
        <p>
            <a href="~/Views/User/ForgotPassword.cshtml">~/Views/User/ForgotPassword.cshtml</a>
            <label class="form-label">Username:</label><br />
            <input type="text" name="Username" required class="form-control" />
        </p>

        @if (!string.IsNullOrEmpty(message))
        {
            <div style="color: green; font-weight: bold;">@message</div>
        }

        @if (!string.IsNullOrEmpty(error))
        {
            <div style="color: red; font-weight: bold;">@error</div>
        }


        @if (!string.IsNullOrEmpty(question))
        {
            <p>
                <label class="form-label">Security Question:</label><br />
                <strong>@question</strong><br />
                <label class="form-label">Answer:</label><br />
                <input type="text" class="form-control" name="SecurityAnswer" required />
            </p>

            <p>
                <label class="form-label">New Password:</label><br />
                <input type="password" class="form-control" name="NewPassword" required />
            </p>
        }
    <div class="mt-3">
        <input type="submit" class="btn btn-primary" value="Submit" />
        </div>
        </div>
</form>